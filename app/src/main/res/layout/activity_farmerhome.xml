<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="7dp"
    tools:layout_editor_absoluteY="42dp">


    <TextView
        android:id="@+id/fviewUserName"
        android:layout_width="306dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:text="NAME!"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021">

        <ImageButton
            android:id="@+id/farmerProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circular_image_view"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.221" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="348dp"
        android:layout_height="585dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="111dp">

        <Button
            android:id="@+id/btnMerchants"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="169dp"
            android:background="@drawable/blue_button"
            android:text="Find Merchats"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnprices"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="102dp"
            android:background="@drawable/blue_button"
            android:text="Current Prices"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="243dp"
            android:background="@drawable/blue_button"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnFertilizershop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/blue_button"
            android:text="Nearest Fertilizer shop"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnWeather"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="309dp"
            android:background="@drawable/blue_button"
            android:text="Current Weather"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnmypost"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="113dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="382dp"
            android:background="@drawable/blue_button"
            android:text="My Post"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>